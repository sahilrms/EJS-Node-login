<div class="container mx-auto mt-8">
    <h1 class="text-2xl font-bold mb-4">Sign Up</h1>
    <form action="/signup" method="post">
      <input type="email" name="email" placeholder="email" class="border rounded py-2 px-3 mb-2" required>
      <input type="text" name="username" placeholder="Username" class="border rounded py-2 px-3 mb-2"  required>
      <input type="password" name="password" placeholder="Password" class="border rounded py-2 px-3 mb-2" required>
      <button type="submit" class="bg-blue-500 text-white py-2 px-4 rounded">Sign Up</button>
    </form>
    <h1 class="text-2xl font-bold mt-8 mb-4">Sign In</h1>
    <form action="/signin" method="post">
      <input type="email" name="email" placeholder="email" class="border rounded py-2 px-3 mb-2">
      <input type="password" name="password" placeholder="Password" class="border rounded py-2 px-3 mb-2">
      <button type="submit" class="bg-blue-500 text-white py-2 px-4 rounded">Sign In</button>
    </form>
  </div>
  